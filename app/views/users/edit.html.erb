<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">

     <h2>User info</h2>

     <%= form_for(@user) do |f| %>
     <%= render 'books/error', model: @user %>

     <div class="user-name">Name</div>
      <%= f.text_field :name %>
     <div class="user-edit-image">Image</div>

      <%= f.file_field :profile_image, class: "form-control-file", placeholder: "プロフィール画像", accept: "image/*" %>

     <div class="form-body">Introduction</div>
      <%= f.text_area :introduction %><br>
     <div class="form-group">
      <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
     </div>
    <% end %>

    </div>
  </div>
</div>