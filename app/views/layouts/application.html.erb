<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
            <span class="title">Bookers</span>
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggle-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>

              <li>
                <%= link_to user_path(current_user), class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
                <% end %>
              </li>

              <li>
                <%= link_to users_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
                <% end %>
              </li>
              <li>
                <%= link_to books_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"> Log out</span>
                <% end %>
              </li>


            <% else %>
               <li>
                <%= link_to root_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to home_about_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-link" aria-hidden="true"> About</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"> Sign up</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class:"btn btn-link" do %>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"> Log in</span>
                <% end %>
              </li>

            <% end %>

          </ul>
        </div>
      </div>
     </nav>
    </header>

    <div class="body">
      <p class="notice"><%= notice %></p>

      <%= yield %>


        <footer>
          <p class="text-center"> CopyRight Infratop.inc</p>
        </footer>


    </div>
  </body>
</html>
